# FlowIndex Local Development Environment
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# Generate JWT keys: node -e "const c=require('crypto');const s=c.randomBytes(48).toString('base64url');function j(p){const h=Buffer.from(JSON.stringify({alg:'HS256',typ:'JWT'})).toString('base64url');const b=Buffer.from(JSON.stringify(p)).toString('base64url');return h+'.'+b+'.'+c.createHmac('sha256',s).update(h+'.'+b).digest('base64url')};const i=Math.floor(Date.now()/1000),e=i+315360000;console.log('SUPABASE_JWT_SECRET='+s);console.log('SUPABASE_ANON_KEY='+j({role:'anon',iss:'supabase',iat:i,exp:e}));console.log('SUPABASE_SERVICE_KEY='+j({role:'service_role',iss:'supabase',iat:i,exp:e}))"

# --- Supabase Auth ---
SUPABASE_JWT_SECRET=your-jwt-secret-at-least-32-chars
SUPABASE_DB_PASSWORD=change-me
SUPABASE_ANON_KEY=generate-with-script-above
SUPABASE_SERVICE_KEY=generate-with-script-above

# --- Supabase Auth (GoTrue) ---
API_EXTERNAL_URL=http://localhost:9999
SITE_URL=http://localhost:5173

